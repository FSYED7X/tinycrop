{
  "name": "Crop",
  "version": "1.0.0",
  "description": "JavaScript Image Cropping",
  "main": "./src/Crop.js",
  "scripts": {
    "test": "standard",
    "lint": "standard",
    "fix": "standard --fix",
    "watch": "watchify src/Crop -o build/Crop.js -s Crop",
    "build": "browserify src/Crop -o build/Crop.js -s Crop",
    "build-min": "browserify src/Crop -t uglifyify -o build/Crop.min.js -s Crop",
    "react-demo": "watchify src/react-demo.jsx -t reactify -o build/react-demo.js"
  },
  "standard": {
    "ignore": [
      "/build/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WebSeed/crop.git"
  },
  "keywords": [
    "image",
    "crop",
    "react"
  ],
  "author": "Will Bamford",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WebSeed/crop/issues"
  },
  "homepage": "https://github.com/WebSeed/crop",
  "dependencies": {
    "normalize.css": "^3.0.3",
    "react": "^0.14.3",
    "react-dom": "^0.14.3"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "reactify": "^1.1.1",
    "standard": "^8.5.0",
    "uglifyify": "^3.0.4",
    "watchify": "^3.6.1"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  }
}
