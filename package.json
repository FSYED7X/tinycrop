{
  "name": "Crop",
  "version": "1.1.0",
  "description": "JavaScript Image Cropping",
  "main": "./src/Crop.js",
  "scripts": {
    "test": "standard",
    "lint": "standard",
    "fix": "standard --fix",
    "xxxbuild": "BABEL_ENV=development babel src -d lib",
    "build": "BABEL_ENV=development browserify src/Crop.js -s Crop -o dist/Crop.js -d",
    "build-min": "BABEL_ENV=production NODE_ENV=production browserify src/Crop.js -s Crop | uglifyjs -c > dist/Crop.min.js",

    "xxxwatch": "watchify src/Crop -o build/Crop.js -s Crop",
    "xxxbuild-min": "browserify src/Crop -t uglifyify -o build/Crop.min.js -s Crop",
    "xxxreact-demo": "watchify src/react-demo.jsx -t reactify -o build/react-demo.js"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  },
  "standard": {
    "ignore": [
      "/dist/",
      "/lib/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WebSeed/crop.git"
  },
  "keywords": [
    "image",
    "crop",
    "react"
  ],
  "author": "Will Bamford",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WebSeed/crop/issues"
  },
  "homepage": "https://github.com/WebSeed/crop",
  "dependencies": {
    "normalize.css": "^5.0.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "reactify": "^1.1.1",
    "standard": "^8.5.0",
    "uglifyify": "^3.0.4",
    "watchify": "^3.6.1"
  }
}
